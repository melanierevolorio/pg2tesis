@page
@model SuperGasSecurity.Pages.Account.Logout.LoggedOut

<div class="logged-out-page">
    <h1 class ="font-medium leading-tight text-5xl mt-0 mb-2 text-primary">
            SU SESIÓN SE HA CERRADO CORRECTAMENTE
    </h1>
    @if (Model.View.PostLogoutRedirectUri != null)
    {
        <h3 class="font-medium leading-tight text-5xl mt-0 mb-2 text-primary">
           <div>
            Haga click <a class="PostLogoutRedirectUri" href="@Model.View.PostLogoutRedirectUri">aquí</a> para iniciar sesión nuevamente
        </div>
        </h3>
        
    }

    @if (Model.View.SignOutIframeUrl != null)
    {
        <iframe width="0" height="0" class="signout" src="@Model.View.SignOutIframeUrl"></iframe>
    }
</div>

@section scripts
    {
    @if (Model.View.AutomaticRedirectAfterSignOut)
    {
        <script src="~/js/signout-redirect.js"></script>
    }
}